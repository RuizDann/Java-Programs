
public class RectangleMain {
	private int l;
	private int w;
	
	public int getL() {
		return l;
	}
	
	public void setL(int newL) {
		l = newL;
	}
	public int getW() {
		return w;
	}
	public void setW(int newW) {
		w = newW;
	}
	public RectangleMain(int newL, int newW) {
		l = newL;
		w = newW;
	}
	public int getP() {
		return (l * 2) + (w * 2);
	}
	public int getA() {
		return l * w;
	}
	
}
